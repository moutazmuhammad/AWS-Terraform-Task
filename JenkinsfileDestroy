pipeline {
  agent any
    tools {
       terraform 'terraform'
    }
    stages {
        stage('terraform init'){
          steps{
             withAWS(credentials: 'awsCredential') {
                sh 'terraform -chdir=./terraform init'
                }
          }
        }
        stage('terraform Destroy'){
          steps{
             withAWS(credentials: 'awsCredential') {
                sh 'terraform -chdir=./terraform destroy --auto-approve --var-file dev.tfvars '
                }
          }
        }
    }
    
}
